#include <stdio.h>
#include<math.h> //为后面使用数学函数
int main()
{
    float a,b,c,s;
    double area;
    scanf("%f",&a);
    scanf("%f",&b);
    scanf("%f",&c);
    printf("a=%f b=%f c=%f\n",a,b,c);
    s = (a+b+c)/2;
    area = sqrt(s*(s-a)*(s-b)*(s-c)); //sqrt()函数，计算括号里面的平方根
    printf("area=%f",area);
	return 0;
}
